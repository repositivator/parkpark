@CHARSET "UTF-8";

h {
	color: blue;
	font-size: 20px;
}

#map {
	width: 100%;
	height: 800px;
}  







#mapwrap{position:relative;overflow:hidden;width:100%;height:800px;}
.category, .category *{margin:0;padding:0;color:#090909;}   
.category {position:absolute;overflow:hidden;top:8px;right:8px;width:150px;height:65px;z-index:10;/* border:1px solid black; */font-family:'Malgun Gothic','맑은 고딕',sans-serif;font-size:15px;font-weight: bold;text-align:center;background-color:rgba(255, 255, 255, 0);}
.category .menu_selected {background:rgba(56, 211, 255, 0.64);color:#fff;/* border-left:1px solid #915B2F;border-right:1px solid #915B2F; */margin:0 -1px;} 
.category li{list-style:none;float:left;width:50px;height:57px;padding-top:5px;cursor:pointer;} 
.category .ico_comm {display:block;margin:0 auto 2px;width:24px;height:27px;background:url('../img/category_3.png') no-repeat;} 
.category .ico_all {background-position:-8.5px 0;}  
.category .ico_share {background-position:-10px -36px;}   
.category .ico_public {background-position:-10px -72px;} 



#menu_wrap {position:absolute;top:0;left:0;bottom:0;width:400px;height:65px; margin:10px 0 30px 10px;padding:5px;overflow-y:auto;background:rgba(255, 255, 255, 0.7);z-index: 1;font-size:15px;/* border-radius: 10px; */}
.bg_white {background:#fff;}
#menu_wrap .option{text-align: center;}
#menu_wrap .option p {margin:10px 0;}  
#menu_wrap .option button {margin-left:5px;}
#menu_wrap input {height:30px}


.overlay_info {border-radius: 6px; margin-bottom: 12px; float:left;position: relative; border: 1px solid #ccc; border-bottom: 2px solid #ddd;background-color:#fff;}
.overlay_info:nth-of-type(n) {border:0; box-shadow: 0px 1px 2px #888;}
.overlay_info a {display: block; background: #d95050; background: #38D3FF url('../img/arrow_white.png') no-repeat right 14px center; text-decoration: none; color: #fff; padding:10px 30px 10px 25px; font-size: 15px; border-radius: 6px 6px 0 0}
.overlay_info a strong {padding-left: 0px;}
.overlay_info .desc {padding:14px;position: relative; min-width: 290px; height: 90px}
.overlay_info img {vertical-align: middle;}
.overlay_info .address {font-size: 12px; font-weight: bold; color: #333; position: absolute; left: 110px; right: 14px; top: 14px; white-space: normal}
.overlay_info:after {content:'';position: absolute; margin-left: -11px; left: 50%; bottom: -12px; width: 22px; height: 12px; background:url('../img/vertex_white.png') no-repeat 0 bottom;}


