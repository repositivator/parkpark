input[type=text] {
    width: 98%;
    padding: 12px 20px;
    margin: 8px 8px 8px 8px;
    box-sizing: border-box;
    border: 3px solid #ccc;
    -webkit-transition: 0.5s;
    transition: 0.5s;
    outline: none;
}

input[type=text]:focus {
    border: 3px solid #1BA4E7;
}

input[type=password] {
    width:98%;
    padding: 12px 20px;
    margin: 3px 8px 8px 8px;
    box-sizing: border-box;
    border: 3px solid #ccc;
    -webkit-transition: 0.5s;
    transition: 0.5s;
    outline: none;
}

input[type=password]:focus {
    border: 3px solid #1BA4E7;
}